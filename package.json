{
	"name": "spacestation13",
	"version": "1.0.0",
	"description": "The official website for Space Station 13",
	"author": "Wire <wirewraith@gmail.com>",
	"private": true,
	"scripts": {
		"dev": "nuxt",
		"build": "nuxt build",
		"start": "nuxt start",
		"generate": "nuxt generate",
		"ci": "git fetch && git reset --hard origin/master && yarn --frozen-lockfile && yarn generate",
		"lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
		"lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
		"lint:prettier": "prettier --check .",
		"lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
		"lintfix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix"
	},
	"dependencies": {
		"@nuxt/content": "^1.15.1",
		"@nuxtjs/axios": "^5.13.6",
