		"core-js": "^3.19.3",
		"lazysizes": "^5.3.2",
		"nuxt": "^2.15.8",
		"nuxt-modernizr": "^2.0.10",
		"vue": "^2.6.14",
		"vue-clickaway": "^2.2.2",
		"vue-dompurify-html": "^2.5.0",
		"vue-server-renderer": "^2.6.14",
		"vue-template-compiler": "^2.6.14",
		"webpack": "^4.46.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.16.3",
